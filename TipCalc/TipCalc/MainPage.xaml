<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TipCalc"
             BackgroundColor="BlueViolet"
             x:Class="TipCalc.MainPage"
             Title="Home Page">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to ServeEazy"
                Font="Oswald" FontSize="Large"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="An Easy Way To Keep Track Of Today's Wages."
                Font="Oswald"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Switch Between The Different Tabs To Either Calculate What Percentage Tip Your Table Gave You.. Or To Figure How Much You Made Hourly During Your Shift."
                Font="Oswald"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
