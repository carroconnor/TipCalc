<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TipCalc"
             BackgroundColor="BlueViolet"
             x:Class="TipCalc.MainPage"
             Title="Home Page">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to ServeEazy"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button  x:Name="btnPercentage" Text="Configure Your Table's Tip %" Clicked="BtnPercentage_OnClicked" />
            <Button  x:Name="ToHourlyWageButton" Text="Configure Your Hourly Wage" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
